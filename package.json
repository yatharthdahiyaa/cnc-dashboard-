{
  "name": "realtime-dashboard-websocket",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "npm run dev --workspace=client",
    "start:server": "npm run dev --workspace=server",
    "install:all": "npm install && npm run install:client && npm run install:server",
    "install:client": "npm install --workspace=client",
    "install:server": "npm install --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}